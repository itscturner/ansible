# {{ ansible_managed }}

# /etc/login.defs - Configuration control definitions for the login package.

# Directory where mailboxes reside, _or_ name of file, relative to the home directory.
# If you _do_ define both, MAIL_DIR takes precedence. QMAIL_DIR is for Qmail.
#QMAIL_DIR      Maildir
MAIL_DIR        {{ logindefs_maildir }}
#MAIL_FILE      .mail

# Maximum number of days a password may be used.
PASS_MAX_DAYS   ##########

# Minimum number of days allowed between password changes.
PASS_MIN_DAYS   ##########

# Minimum acceptable password length.
PASS_MIN_LEN    ##########

# Number of days warning given before a password expires.
PASS_WARN_AGE   ##########

# Min/max values for automatic uid selection in useradd.
UID_MIN                 {{ logindefs_uidmin }}
UID_MAX                 {{ logindefs_uidmax }}

# Min/max values for automatic gid selection in groupadd.
GID_MIN                 {{ logindefs_gidmin }}
GID_MAX                 {{ logindefs_gidmax }}

# If defined, this command is run when removing a user.
# It should remove any at/cron/print jobs etc. owned by the user to be removed (passed as the first argument).
#USERDEL_CMD    /usr/sbin/userdel_local

# If useradd should create home directories for users by default. 
# On RH systems, we do. This option is overridden with the -m flag on useradd command line.
CREATE_HOME     {{ logindefs_createhome | default('true') }}

# The permission mask is initialized to this value. If not specified, the permission mask will be initialized to 022.
UMASK           {{ logindefs_umask }}

# This enables userdel to remove user groups if no members exist.
USERGROUPS_ENAB yes

# Use SHA512 to encrypt password.
ENCRYPT_METHOD SHA512
