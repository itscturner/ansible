# {{ ansible_managed }}

lang {{ kickstart_language | default('en_US') }}
keyboard --xlayouts='{{ kickstart_keyboard | default('us') }}'
timezone {{ kickstart_timezone | default('America/Denver') }}{% if kickstart_utc %}--utc{% endif %}
eula --agreed




rootpw  --iscrypted ROOT_PW



{% if kickstart_reboot %}reboot{% endif %}



text {% if kickstart_text_noninteractive %}--non-interactive{% endif %}



url --url={{ kickstart_url }}


reqpart


bootloader --location=boot --append="rhgb quiet crashkernel=1G-4G:192M,4G-64G:256M,64G-:512M" --iscrypted --password=


network --bootproto=dhcp


authselect


firstboot --{{ kickstart_firstboot }}

selinux --{{ kickstart_selinux }}

firewall --{{ kickstart_firewall }}


services
services --enabled=sshd --disabled=filewalld









%pre --log={{ kickstart_preinstall_log }}
# PRE
%end

%post --log={{ kickstart_postinstall_log }}
# POST
%end




%packages --ignoremissing
{{ kickstart_packages | join('\n') }}
%end

